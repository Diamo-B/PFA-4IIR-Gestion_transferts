generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User { //DONE
  id        String   @id @default(uuid())
  firstName String?
  lastName  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  client    Client?
  agent     Agent?
}

model Client { //DONE
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @id @unique
}

model Agent { //Doing
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         String          @id @unique
  categories  AgentCategoryPermission[]
}

model Category {  //DONE
  id String @id @default(uuid())
  name String @unique
  categories  AgentCategoryPermission[]
}

model AgentCategoryPermission { //TODO
  id          String    @id @default(uuid())
  agent       Agent     @relation(fields: [agentId], references: [userId])
  agentId     String
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  permissions  Permission[]
}

model Permission{ //DOING
  id String @id @default(uuid())
  value Value
  agents AgentCategoryPermission[]
}

enum Value {
  read
  create
  update
  delete
}

