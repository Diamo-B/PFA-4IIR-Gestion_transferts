// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String?
  lastName  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  client    Client?
  agent     Agent?
}

model Client {
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @id @unique
}

model Agent {
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId         String          @id @unique
  authorisations Authorisation[]
}

enum authorisationLevels { 
  //TODO: turn this into it's own table
  read
  write
  add
  remove
}

model AuthorisationLevel{
  id String @id @default(uuid())
  category String @unique
  action String @unique
}

model Authorisation {
  id     String              @id @default(uuid())
  name   String              @unique
  level  authorisationLevels
  agents Agent[]
}

